    <%= link_to "Start A Sports Game", new_article_path, class: "new_article" %>

<div class="gmapper">
    <div id="map" style=' height: 400px;'></div>
</div>


<div id= "articles-holder">
    <% @articles.each do |article| %>
        <div class="all_articles">
            <div class="general-data">
                <h2><%= link_to article.title, article_path(article), 'data-no-turbolink' => true %></h2>
                <p> <%= article.setting %></p>
                <p> <%= article.location %></p>
                <p class="joined_body"><%= article.body %></p>
            </div>
            <div class="game-date">
                <p class="month"><%= article.month %></p>
                <h2 class="day"><%= article.day %></h2>
                <p class="time"><%=  article.time%></p>
            </div>
            <div class="players"></div>
                <p class="joined_players"><%= article.player_names.length %> spots filled: <%= article.players%> left </p>
                <p><span class=posted>posted by: </span>
                <% if article.users.length >= 1 %>
                    <a href='/users/<%=article.users.first.id %>'> <%= article.users.first.email.split('@')[0] %> </a>
                <% end %>
            </p>
        </div>
    <% end %>
</div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    var markers = handler.addMarkers([

        <% @articles.each do |article| %>
            { lat: <%= article.latitude %>, lng: <%= article.longitude %>,
                infowindow: "<%= article.title %>"
            },
        <% end %>

    ]);
handler.bounds.extendWith(markers);
handler.fitMapToBounds();
});
</script>
